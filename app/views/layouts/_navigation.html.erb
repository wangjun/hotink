<div id="navigation" class="clearfix">
	<div id="navigation_container">
	  <% if flash[:notice] %>
		  <div id="flash">
		    <%= render_flash(flash[:notice]) %>
		    <div id="flash_background"></div>
		  </div>
		  
		  <script type="text/javascript">
		    var flashText = document.getElementById("flash").children[0].innerHTML;
		    document.getElementById("flash").addEventListener("mouseover", function () {
		      document.getElementById("flash_background").style.opacity = 1;
		      document.getElementById("flash").children[0].innerHTML = flashText + " (click to hide)";
		    }, false);
		    document.getElementById("flash").addEventListener("mouseout", function () {
		      document.getElementById("flash_background").style.opacity = 0;
		      document.getElementById("flash").children[0].innerHTML = flashText;
		    }, false);
		    
		    document.getElementById("flash").addEventListener("click", function () {
		      document.getElementById("flash").style.display = "none";
		    }, false);
		  </script>
		<% end %>
		<div id="main_navigation_container">
		  <div id="logo" class="alpha"><%= image_tag '/images/logo_tiny.png' %></div>
      <div id="user_details">
        <ul>
          <li><%= current_user.login %>&#9660;</li>
          <li class="first_hidden"><%= button_link_to "Manage account", edit_user_path(current_user, :format => :html), :class=>"tiny modal", :id => "edit_current_user_link" %></li>
          <li><%= button_link_to "Manage site", edit_account_url(@account), :class=>"tiny modal" %></li>
          <li><%= button_link_to "Log out", logout_url, :method=>:get, :class=>"tiny", :id=>"user_logout_button" %></li>
        </ul>  
      </div>
	      
		  <ol id="links">
			  <li <%= 'class="current"' if controller_name == "dashboards" %>><%= link_to "Dashboard", dashboard_url %></li>
			  <li <%= 'class="current"' if controller_name == "articles" %>><%= link_to "Articles", articles_url %></li>
			  <li <%= 'class="current"' if (controller_name == "blogs") || (controller_name == "entries") %>><%= link_to "Blogs", blogs_url %></li>
			  <li <%= 'class="current"' if controller_name == "lists" %>><%= link_to "Lists", lists_url %></li>
			  <li <%= 'class="current"' if controller_name == "mediafiles" %>><%= link_to "Media", mediafiles_url %></li>
			  <li <%= 'class="current"' if controller_name == "issues" %>><%= link_to "Issues", issues_url %></li>
			  <% if permit? "(manager of account) or admin" %>
				  <li <%= 'class="current"' if (controller_name=="pages") %>><%= link_to "Pages",pages_url %></li>
				  <li <%= 'class="current"' if (controller_name=="comments") %>><%= link_to "Comments", comments_path %></li>
			  <% end %>

			
			  <% if permit?("(manager of account) or (editor of account) or admin")%>
				  <% if @account.network_owner? %><li <%= 'class="current"' if (controller_name=="networks") %>><%= link_to "Network", network_url %></li><% end %>
			  <% end %>
		
			  <% if permit?("(manager of account) or admin")%>
				  <li <%= 'class="current"' if (controller_name=="designs"||controller_name=="templates"||controller_name=="template_files") %>><%= link_to "Design", current_design_url %></li>
			  <% end %>
		  </ol>
		
		  <% if permit?("(manager of account)") || permit?("admin") %>
			  <div id="account_details">
				  <img src="/loading_small_222.gif" style="float:left;margin-right:0.5em;margin-top:0.25em;display:none;" class="spinner"/>
           
			  </div>
		  <% end %>
		</div>
	</div>
</div>
